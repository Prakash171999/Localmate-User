<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetPassword">

    <Button
        android:id="@+id/changePwd"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        android:clickable="true"
        android:fontFamily="@font/roboto_light"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/reset_cpwd"
        app:layout_constraintStart_toStartOf="@+id/reset_cpwd"
        app:layout_constraintTop_toBottomOf="@+id/reset_cpwd" />

    <TextView
        android:id="@+id/passwordForgot"
        style="@android:style/Widget.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#00DA0909"
        android:fontFamily="@font/alex_brush"
        android:text="Localmate Drive"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_light"
        android:text="Reset your password"
        android:textColor="#0C0C0C"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordForgot"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/passwordForgot"
        app:layout_constraintTop_toBottomOf="@+id/passwordForgot" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_light"
        android:lineSpacingExtra="8dp"
        android:text="Fill up the form to reset the password.\nEnter the provided token key in token field"
        android:textColor="#020202"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailReset"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_field"
        android:drawableStart="@drawable/email"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_light"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tokenkey"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_field"
        android:drawableStart="@drawable/key"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_light"
        android:hint="Token Key"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/emailReset"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailReset"
        app:layout_constraintTop_toBottomOf="@+id/emailReset" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reset_pwd"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_field"
        android:drawableStart="@drawable/password"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_light"
        android:hint="New Password"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/tokenkey"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tokenkey"
        app:layout_constraintTop_toBottomOf="@+id/tokenkey" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reset_cpwd"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_field"
        android:drawableStart="@drawable/password"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_light"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/reset_pwd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reset_pwd"
        app:layout_constraintTop_toBottomOf="@+id/reset_pwd" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Don,t reset, I know my password.\nLogin now."
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="@+id/changePwd"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/changePwd"
        app:layout_constraintTop_toBottomOf="@+id/changePwd" />

</androidx.constraintlayout.widget.ConstraintLayout>